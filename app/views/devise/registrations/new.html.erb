<div class="container">
  <div class="row">
<div class="wrapper col-md-4 col-md-offset-2 col-xs-3">

<h2 class="title">Lvinoに登録する！</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
     <%= f.label :名前 %>
   　 <%= f.text_field :name, class: "form-control", placeholder: "名前"  %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true,  class: "form-control", placeholder: "メールアドレス"%>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上で登録してください！)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :確認用パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
  </div>
  
  <div class="field">
    <%= f.label :avatar %>
    <%= image_tag(@user.avatar.url) if @user.avatar.url %>
    <%= f.file_field :avatar, id: :avatar_image %>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-primary btn-block" %>
  </div>
<% end %>


<p><%= link_to "登録済みの方はこちら",new_user_session_path%><p>

</div>
</div>
</div>