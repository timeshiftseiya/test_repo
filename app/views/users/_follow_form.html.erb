<div id="follow_form_<%= user.id %>">
  <% unless current_user.following?(user) %>
    <%= form_with(model: current_user.relationships.build(followed_id: user.id)) do |f| %>
      <%= f.hidden_field :followed_id %>
        <%= f.submit "フォローする", class: "btn btn-large btn-primary" %>
          <% end %>
            <% else %>
              <%= form_with(model: current_user.relationships.find_by(followed_id: user.id),method: :delete ) do |f| %>
                <%= f.submit "フォロー解除", class: "btn btn-large" %>
                  <% end %>
                    <% end %>
</div>